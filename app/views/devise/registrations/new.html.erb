
<div class="container">
	<h2>Sign Up</h2>
		<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-7") do |f| %>
		  <%= f.email_field :email, :required => true %>
		  <%= f.password_field :password, :required => true %>
		  <%= f.password_field :password_confirmation, :required => true %>
		  <%= f.submit "Sign up" %>
		<% end %>



</div>

