
<div class="container">
	<h2>Log in</h2>
		<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-7")) do |f| %>
		  <%= f.email_field :email %>
		  <%= f.password_field :password %>
		  <%= f.check_box :remember_me %>
		  <%= f.submit "Log In" %>
		<% end %>

	<%= render "devise/shared/links" %>
</div>