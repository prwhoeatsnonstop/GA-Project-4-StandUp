<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
<h1>Hello <%= @user.email %></h1>
<% end %>

<h1>Boards</h1>

<table>
  <thead>
    <tr>
      <th>Accomplishment</th>
      <th>Challenges</th>
      <th>Task</th>
      <th>Resources</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.accomplishment %></td>
        <td><%= board.challenges %></td>
        <td><%= board.task %></td>
        <td><%= board.resources %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Board', new_board_path %>
<% end %>

<%= link_to 'log out', destroy_user_session_url, method: :delete %>