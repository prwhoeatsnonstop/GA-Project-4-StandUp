<p id="notice"><%= notice %></p>

<h1>Boards</h1>

<table>
  <thead>
    <tr>
      <th>Accomplishment</th>
      <th>Challenges</th>
      <th>Task</th>
      <th>Resources</th>
      <th>Text</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.accomplishment %></td>
        <td><%= board.challenges %></td>
        <td><%= board.task %></td>
        <td><%= board.resources %></td>
        <td><%= board.text %></td>
        <td><%= board.user_id %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

