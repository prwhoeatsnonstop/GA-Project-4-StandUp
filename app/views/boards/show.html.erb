<p id="notice"><%= notice %></p>

<div class="container">

	<h2>Individual Board</h2>
</div>

<div class="container" id="wrapper">

	<div class="card" id="left">
	  <div class="card-header">
	    <h1>Accomplishments</h1>
	  </div>
	  <div class="card-body">
	    <blockquote class="blockquote mb-0">
	    		<p>
							<%= @board.accomplishment %> by <%= @board.user.email %> <%= @board.created_at.strftime(", posted on %m/%d/%Y at %I:%M%p") %>
					</p>
							<br>
	    </blockquote>
	  </div>
	</div>

	<div class="card" id="right">
	  <div class="card-header">
	    <h1>Challenges</h1>
	  </div>
	  <div class="card-body">
	    <blockquote class="blockquote mb-0">
					<p>
							<%= @board.challenges %> by <%= @board.user.email %><%= @board.created_at.strftime(", posted on %m/%d/%Y at %I:%M%p") %>
					</p>
							<br>
			</blockquote>
	  </div>
	</div>
</div>

<div class="container" id="wrapper">
	<div class="card" id="left">
	  <div class="card-header">
	    <h1>Tasks</h1>
	  </div>
	  <div class="card-body">
	    <blockquote class="blockquote mb-0">
					<p>
						<%= @board.task %> by <%= @board.user.email %><%= @board.created_at.strftime(", posted on %m/%d/%Y at %I:%M%p") %>
					</p>
							<br>
			</blockquote>
	  </div>
	</div>

	<div class="card" id="right">
	  <div class="card-header">
	    <h1>Resources</h1>
	  </div>
	  <div class="card-body">
	    <blockquote class="blockquote mb-0">
					<p>
						<%= @board.resources %> by <%= @board.user.email %><%= @board.created_at.strftime(", posted on %m/%d/%Y at %I:%M%p") %>
					</p>
							<br>
			</blockquote>
	  </div>
	</div>
</div>

<div class="container">
	<div class="show">
		<%= link_to 'Edit', edit_board_path(@board) %> |
		<%= link_to 'Back', boards_path %>
	</div>
</div>